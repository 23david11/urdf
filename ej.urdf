<?xml version="1.0"?>
<robot name="myfirstrobot">

  <link name="base_link">

    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 .25"/>
      <geometry>
        <box size="1 1 0.5"/>
      </geometry>
    </collision>

  </link>

  <link name="body_link">

    <visual>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <box size="0.5 0.5 2"/>
      </geometry>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 1"/>
      <geometry>
        <box size="0.5 0.5 2"/>
      </geometry>
    </collision>

  </link>

  <joint name="base_link" type="fixed">
    <parent link="base_link"/>
    <child link="body_link"/>
    <!-- <dynamics friction="0.0001"/> -->

    <origin xyz="0 0 0.5"/>
    <!-- <axis xyz="0 0 1"/> -->

    <!-- <limit lower="-3.14" upper="3.14" effort="10.0" velocity="0.5"/> -->
  </joint>

  <link name="top_link">

    <visual>
      <origin rpy="0 0 0" xyz="0.5 0 0.25"/>
      <geometry>
        <box size="1 0.5 0.5"/>
      </geometry>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0.5 0 0.25"/>
      <geometry>
        <box size="1 0.5 0.5"/>
      </geometry>
    </collision>

  </link>

  <joint name="body_link" type="continuous">
    <parent link="body_link"/>
    <child link="top_link"/>
    <dynamics friction="0.0001"/>

    <origin xyz="0 0 2"/>
    <axis xyz="0 0 1"/>

    <limit lower="-3.14" upper="3.14" effort="10.0" velocity="0.5"/>
    <!-- <parent link="body_link"/>
    <child link="top_link"/>

    <origin xyz="0.5 0 2"/> -->
  </joint>

</robot>
